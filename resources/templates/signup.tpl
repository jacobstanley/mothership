<apply template="default">

<header>
  <h2>Sign up for Mothership</h2>
</header>

<form method="post">
  <dl>
    <dt><label for="username">Username</label></dt>
    <dd><input id="username" name="username" type="text" autofocus></dd>
  </dl>

  <dl>
    <dt><label for="full_name">Full Name</label></dt>
    <dd><input id="full_name" name="full_name" type="text"></dd>
  </dl>

  <dl>
    <dt><label for="email">Email Address</label></dt>
    <dd><input id="email" name="email" type="text"></dd>
  </dl>

  <dl>
    <dt><label for="password">Password</label></dt>
    <dd><input id="password" name="password" type="password"></dd>
  </dl>

  <button type="submit">Create account</button>
</form>

</apply>
